	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "Run Tests",
			"program": "${workspaceFolder}/node_modules/mocha/bin/mocha",
			"args": [
				"-u",
				"bdd",
				"tests/*.js",
				"--timeout",
				"0",
				"--slow",
				"10",
				"--colors",
			],
			"internalConsoleOptions": "openOnSessionStart",
			"outputCapture": "std",
			"cwd": "${workspaceFolder}",
		},
		{
			"name": "------------------------------------------",
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Test 910",
			"skipFiles": [
				"<node_internals>/**"
			],
			"program": "${workspaceFolder}/build/custom/910-release-version.js",
			"cwd": "${workspaceFolder}",
			"args": [
				"--test",
			],
		},
	]
}